doctype html
html(lang="en")
  head
    title= title
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width; initial-scale=1.3; maximum-scale=1.3; user-scalable=no;")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-status-bar-style" content="black")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type='text/javascript').
        window.onload = function() {
            // Disable scrolling on iPhone, etc
            document.body.addEventListener('touchmove', function(e) { e.preventDefault(); });
            document.body.addEventListener('touchdown', function(e) { e.preventDefault(); });
            window.onresize();
        }

        window.onresize = function() {
            var control_canvas = document.getElementById("control-surface");
            control_canvas.width = window.innerWidth;
            control_canvas.height = window.innerHeight;
            redraw();
        }
  body
    block content
